<?xml version="1.0"?>
<config>
	<modules>
		<Cammino_Loyalty>
			<version>0.0.3</version>
		</Cammino_Loyalty>
	</modules>
	<global>
        <blocks>
            <loyalty>
                <class>Cammino_Loyalty_Block</class>
            </loyalty>
            <adminhtml>
                <rewrite>
                    <sales_order_totals>Cammino_Loyalty_Block_Adminhtml_Sales_Order_Totals</sales_order_totals>
                    <sales_order_invoice_totals>Cammino_Loyalty_Block_Adminhtml_Sales_Order_Invoice_Totals</sales_order_invoice_totals>
                    <sales_order_creditmemo_totals>Cammino_Loyalty_Block_Adminhtml_Sales_Order_Creditmemo_Totals</sales_order_creditmemo_totals>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <loyalty>
                <class>Cammino_Loyalty_Helper</class>
            </loyalty>
        </helpers>
		<models>
            <salesrule>
                <rewrite>
                    <rule_condition_address>Cammino_Loyalty_Model_Rule_Condition_Address</rule_condition_address>
                </rewrite>
            </salesrule>
			<loyalty>
				<class>Cammino_Loyalty_Model</class>
                <resourceModel>loyalty_mysql4</resourceModel>
			</loyalty>
            <loyalty_mysql4>
                <class>Cammino_Loyalty_Model_Mysql4</class>
                <entities>
                    <loyalty>
                        <table>customer_points</table>
                    </loyalty>
                </entities>
            </loyalty_mysql4>
		</models>
        <template>
            <email>
                <loyalty_email module="loyalty">
                    <label>Loyalty</label>
                    <file>loyalty.html</file>
                    <type>html</type>
                </loyalty_email>
                <loyalty_email_nopoints module="loyalty">
                    <label>Loyalty</label>
                    <file>loyaltynopoints.html</file>
                    <type>html</type>
                </loyalty_email_nopoints>
            </email>
        </template>
        <resources>
            <loyalty_setup>
                <setup>
                    <module>Cammino_Loyalty</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </loyalty_setup>
            <loyalty_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </loyalty_write>
            <loyalty_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </loyalty_read>
        </resources>
        <events>
            <model_save_before>
                <observers>
                    <increment_to_id>
                        <class>loyalty/observer</class>
                        <method>alterOrderNumberToOrderId</method>
                    </increment_to_id>
                </observers>
            </model_save_before>
            <sales_order_place_after>
                <observers>
                    <loyalty_order_created>
                        <class>loyalty/observer</class>
                        <method>orderCreated</method>
                    </loyalty_order_created>
                </observers>
            </sales_order_place_after>
            <sales_order_invoice_save_commit_after>
                <observers>
                    <loyalty_invoice_registered>
                        <class>loyalty/observer</class>
                        <method>invoiceCreated</method>
                    </loyalty_invoice_registered>
                </observers>
            </sales_order_invoice_save_commit_after>
            <sales_order_payment_cancel>
                <observers>
                    <loyalty_order_canceled>
                        <class>loyalty/observer</class>
                        <method>orderCanceled</method>
                    </loyalty_order_canceled>
                </observers>
            </sales_order_payment_cancel>
            <payment_method_is_active>
                <observers>
                    <loyalty_payment_method_is_active>
                        <type>singleton</type>
                        <class>loyalty/observer</class>
                        <method>checkPaymentmethod</method>
                    </loyalty_payment_method_is_active>
                </observers>
            </payment_method_is_active>
            <customer_logout>
                <observers>
                    <loyalty_customer_logout>
                        <type>singleton</type>
                        <class>loyalty/observer</class>
                        <method>customerLogout</method>
                    </loyalty_customer_logout>
                </observers>
            </customer_logout>
            <controller_action_predispatch_checkout_onepage_index>
                <observers>
                    <loyalty_min_check>
                        <type>singleton</type>
                        <class>loyalty/observer</class>
                        <method>checkoutMinLoyaltyCheck</method>
                    </loyalty_min_check>
                </observers>
            </controller_action_predispatch_checkout_onepage_index>
        </events>
        <sales>
            <quote>
                <totals>
                    <loyalty_discount>
                        <class>Cammino_Loyalty_Model_Sales_Quote_Address_Total_Tax</class>
                        <after>subtotal</after>
                    </loyalty_discount>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <loyalty_discount>
                        <class>Cammino_Loyalty_Model_Sales_Order_Total_Invoice_Tax</class>
                        <after>subtotal</after>
                    </loyalty_discount>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <loyalty_discount>
                        <class>Cammino_Loyalty_Model_Sales_Order_Total_Creditmemo_Tax</class>
                        <after>subtotal</after>
                    </loyalty_discount>
                </totals>
            </order_creditmemo>
        </sales>
        <fieldsets>
            <sales_convert_quote>
                <loyaltytax>
                    <to_order>*</to_order>
                </loyaltytax>
                <base_loyaltytax>
                    <to_order>*</to_order>
                </base_loyaltytax>
            </sales_convert_quote>
        </fieldsets>
	</global>
    <admin>
        <routers>
            <loyalty>
                <use>admin</use>
                <args>
                    <module>Cammino_Loyalty</module>
                    <frontName>loyalty</frontName>
                </args>
            </loyalty>
        </routers>
    </admin>
    <acl>
        <resources>
            <all>
                <title>Allow Everything</title>
            </all>
            <admin>
                <children>
                    <Cammino_Loyalty>
                        <title>Loyalty Module</title>
                        <sort_order>900</sort_order>
                    </Cammino_Loyalty>
                </children>
            </admin>
        </resources>
    </acl>
    <frontend>
		<layout>
			<updates>
				<loyalty>
					<file>loyalty.xml</file>
				</loyalty>
			</updates>
		</layout>
		<routers>
			<loyalty>
				<use>standard</use>
				<args>
					<module>Cammino_Loyalty</module>
					<frontName>loyalty</frontName>
				</args>
			</loyalty>
		</routers>
	</frontend>
    <crontab>
        <jobs>
            <loyalty_job>
                <schedule>
                    <cron_expr>0 12 * * *</cron_expr>
                </schedule>
                <run>
                    <model>loyalty/job::notify</model>
                </run>
            </loyalty_job>
        </jobs>
    </crontab>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Cammino_Loyalty>
                            <title>Cammino Loyalty Module</title>
                            <sort_order>30</sort_order>
                        </Cammino_Loyalty>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <loyalty_point>
                    <file>loyalty.xml</file>
                </loyalty_point>
            </updates>
        </layout>
        <menu>
            <customer>
                <children>
                    <loyalty>
                        <title>Fidelidade</title>
                        <sort_order>150</sort_order>               
                        <action>loyalty/adminhtml_point</action>
                    </loyalty>
                </children>
            </customer>
        </menu>
    </adminhtml>
    <default>
        <payment>
            <loyalty>
                <active>1</active>
                <model>loyalty/pay</model>
                <order_status>processing</order_status>
                <title>Pagar usando meus pontos</title>
                <allowspecific>0</allowspecific>
                <payment_action>sale</payment_action>
            </loyalty>
         </payment>
    </default>
</config>